
public class For_loops {
	public static void main(String arg[]) {
		for (int i = 0; i < 100; i++) {
			System.out.println("i: "+ i);
			
		String name = "sguichjwlbcch";
		
		for (int a = 0; a < name.length()-1; a++) {
			System.out.println("char: " + name.charAt(a));
		}
		
		String port = "jibjbchecvu";
		
		for (int b = port.length()-1; b >= 0; b--) {
			System.out.println("char: " + port.charAt(b));
		}
		
		for (int c=0; c<=100; c++) {
			int r = c % 2;
			
			if(r == 0) {
				System.out.println(r);
			}
			
			
		}
		}
	}
}
